
@{
	float income = @Model.YearlyWage;
	float tax = @Model.IncomeTax;
}
<div style="text-align: center">
	<h1 style="font-weight: bold" class="display-4">Your Taxes</h1>
	<br/>

	@if(income >= 30000)
	{
		<p  class="display-4">
			You owe @tax GEL.
		</p>
	}
	@if(income < 30000)
	{
		<p  class="display-4">
			Your income is less than 30000 GEL per year, meaning you owe 0.
		</p>
	}
	@using (Html.BeginForm("Index", "Home"))
	{
		<button style="border: 0px;
			background-image:
				linear-gradient(135deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.05))">
			Back to Homepage
		</button>
	}

</div>